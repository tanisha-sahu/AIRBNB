<% layout("./template/syntex.ejs")%>

<div class="row m-auto mt-4">
    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-10 m-auto">
      <h3 class="mb-3">Sign-Up</h3>
        <form class="needs-validation" action="/auth/signup" method="post" novalidate>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email:</label>
              <input type="mail" class="form-control border-2" id="exampleInputEmail1" aria-describedby="emailHelp" name="mail" placeholder="Write email here" required>
              <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter valid mail.
              </div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">User name:</label>
              <input type="text" class="form-control border-2" id="exampleInputPassword1" name="username" placeholder="Write username here" required>
            </div> 
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password:</label>
                <input type="text" class="form-control border-2" id="exampleInputPassword1" name="password" placeholder="Write password here" required>
              </div>
            <button type="submit" class="btn btn-primary">Create</button>
          </form>
    </div>
</div>
