<% layout("./template/syntex.ejs")%>
<body>
    <div class="row m-auto mt-4" >
        <% for (value of data) { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-10">
                <a href="/listing/view/<%= value._id %>" style="text-decoration: none;">
                    <div class="card index-card m-auto" style="width: 18rem;">
                        <img src="<%=value.image.url%>" class="card-img-top index-card-img" alt="...">
                        <div class="card-body">
                          <h6 class="card-title"><%= value.title %></h6>
                          <p><%= value.price.toLocaleString("en-In") %> $/day</p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</body>
